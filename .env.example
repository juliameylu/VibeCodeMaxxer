VITE_DEMO_MODE=true
# For Capacitor native iOS/Android builds, set backend base URL (usually your ngrok HTTPS URL).
# Example: VITE_API_BASE_URL=https://abcd-1234.ngrok-free.app
VITE_API_BASE_URL=
# Legacy frontend env key used by some routes/scripts.
VITE_BACKEND_BASE_URL=http://localhost:3001
# For live APIs in local dev/preview:
# Set VITE_DEMO_MODE=false and provide server-side env values below.
YELP_API_KEY=your_yelp_api_key_here
YELP_LOCATION=San Luis Obispo, CA
CALPOLY_EVENTS_SOURCE=https://r.jina.ai/http://now.calpoly.edu/

# Demo calling (set real values in .env.local only)
# E.164 format, e.g. +15551234567
DEMO_CALLER_NUMBER=+15550001111
DEMO_TARGET_NUMBER=+15550002222
DEMO_SMS_TARGET_NUMBER=+15550007777

# Twilio calling integration (set real values in .env.local only)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+15550003333
TWILIO_PUBLIC_BASE_URL=https://your-ngrok-subdomain.ngrok-free.app
JARVIS_CALL_TONE=casual
DEMO_GUEST_PHONE_NUMBER=+15550006666
DEMO_USER_PHONE_MAP_JSON={"julia+demo1@example.com":"+15550004444","julia+demo2@example.com":"+15550005555"}

# Optional AI voice orchestration
OPENAI_API_KEY=your_openai_api_key_here

# AWS multi-user backend
# session_or_cognito: supports existing x-session-token and Cognito bearer JWT
# cognito_only: only bearer JWT
# session: only x-session-token
AUTH_MODE=session_or_cognito
AWS_REGION=us-west-2
AWS_DYNAMO_TABLE=polyjarvis-state
AWS_STATE_PK=planner_state
AWS_STATE_SK=v1
COGNITO_USER_POOL_ID=us-west-2_example
COGNITO_APP_CLIENT_ID=exampleclientid
SNAPSHOT_FLUSH_MS=2000
